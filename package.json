{
  "name": "discordsandbox",
  "version": "1.1.4",
  "description": "Discord Sandboxed",
  "main": "main.js",
  "scripts": {
    "start": "electron . dev",
    "postinstall": "electron-builder install-app-deps",
    "package-win": "electron-builder --win --publish never",
    "package-AppImage": "electron-builder --linux AppImage"
  },
  "repository": "https://github.com/khlam/discord-sandboxed",
  "keywords": [
    "discord",
    "privacy",
    "sandbox"
  ],
  "author": "Kin-Ho Lam",
  "license": "GNU GENERAL PUBLIC LICENSE Version 3",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "chokidar": "^3.3.1",
    "graceful-fs": "^4.2.2",
    "iohook": "^0.7.2"
  },
  "iohook": {
    "targets": [
      "electron-80"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "build": {
    "appId": "com.electron.DiscordSandboxed",
    "productName": "Discord Sandboxed",
    "win": {
      "asar": true,
      "icon": "views/assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "views/assets/icon.ico",
      "uninstallerIcon": "views/assets/icon.ico",
      "license": "LICENSE.md",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "directories": {
      "output": "release"
    }
  }
}
